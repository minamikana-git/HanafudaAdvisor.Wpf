    </StackPanel>

    <Button Grid.Row="1" Content="蛟呵｣懊ｒ繝励Ξ繝薙Η繝ｼ" Click="OnPreview"/>
    <ListBox Grid.Row="2" x:Name="PreviewList"/>

    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
      <Button Content="OK" Width="80" Margin="0,0,6,0" Click="OnOk"/>
      <Button Content="繧ｭ繝｣繝ｳ繧ｻ繝ｫ" Width="80" Click="OnCancel"/>
    </StackPanel>
  </Grid>
</Window>