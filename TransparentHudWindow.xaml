<Window x:Class="HanafudaAdvisor.Wpf.TransparentHudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HUD" Width="320" Height="240"
        WindowStyle="None" AllowsTransparency="True" Background="#55FFFFFF" Topmost="True">
    <DockPanel Margin="8">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Content="閉" Width="36" Margin="0,0,6,0" Click="OnClose"/>
            <ToggleButton x:Name="ClickThroughToggle" Content="クリック透過"
                    Checked="OnClickThrough" Unchecked="OnClickThrough"/>
        </StackPanel>
        <StackPanel>
            <TextBlock Text="おすすめ手 (上位3)" FontWeight="Bold"/>
            <ItemsControl x:Name="TopMoves"/>
        </StackPanel>
    </DockPanel>
</Window>
