<Window x:Class="HanafudaAdvisor.Wpf.SnipOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="#20000000"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize"
        KeyDown="OnKeyDown" Loaded="OnLoaded">
  <Canvas x:Name="Root" Background="Transparent"
          MouseLeftButtonDown="OnDown" MouseMove="OnMove" MouseLeftButtonUp="OnUp">
    <Rectangle x:Name="Box" Stroke="DeepSkyBlue" StrokeThickness="2"
               Fill="#40FFFFFF" Visibility="Collapsed"/>
    <TextBlock Text="ドラッグで範囲選択 / Enter=確定 / Esc=キャンセル"
               Foreground="White" FontSize="16" Margin="16" />
  </Canvas>
</Window>
